---
export interface Props {
  maxTemp: number;
  minTemp: number;
  icon: string;
}

const { maxTemp, minTemp, icon } = Astro.props;
---

<div class="flex justify-center">
  <div>
    <img class="w-28 h-28" src={icon} />
  </div>
  <div class="flex flex-col justify-center gap-4">
    <div class="text-white text-2xl">
      Max: {maxTemp}°C
    </div>
    <div class="text-white text-2xl">
      Min: {minTemp}°C
    </div>
  </div>
</div>
